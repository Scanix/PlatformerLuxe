{
  luxe:{
    window: {
      width:1280,
      height:720,
      title:'PlatformerLuxe',
      fullscreen:false,
      if : {
        ios : {
          borderless:true
        },
        "!ios": {
          borderless:false
        }
      }
    }
  },

  project : {
    name : 'PlatformerLuxe',
    version : 'Alpha 0.6.0',
    author : 'Alexandre (Scanix) Bianchi',

    app : {
      name : 'NectoProject',
      package : 'ch.nectoria',
      main : 'ch.nectoria.Main'
    },

    build : {
      dependencies : {
        luxe : '*',
        gif : '*',
        gifcapture : '*',
        luxe_gifcapture : '*',
        linc_dialogs : '*',
        "hxcpp-debugger" : '*',
      }
    },

    files : {
      config : 'config.json',
      assets : 'assets/'
    }
  },
  if : {
    "(mac || windows || linux) && debug" : {
      build : {
        defines : ['HXCPP_DEBUGGER'],
      }
    }
  }
}
